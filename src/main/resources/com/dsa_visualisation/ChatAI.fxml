<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dsa_visualisation.ChatAIController">
   <children>
      <HBox prefHeight="40.0" prefWidth="580.0" style="-fx-background-color: #e8d5a7;">
         <children>
            <Label text="Chat AI">
               <font>
                  <Font size="25.0" />
               </font>
               <HBox.margin>
                  <Insets left="11.0" />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
         <children>
            <ScrollPane fx:id="scrollPane" VBox.vgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <HBox prefHeight="43.0" prefWidth="600.0">
         <children>
            <TextField fx:id="userInput" maxHeight="1.7976931348623157E308" prefHeight="42.0" prefWidth="535.0" promptText="Ask a question" style="-fx-border-style: solid; -fx-border-color: #b4a682; -fx-background-radius: 0; -fx-background-color: white;" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <Button fx:id="sendButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="42.0" prefWidth="76.0" text="Send" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
